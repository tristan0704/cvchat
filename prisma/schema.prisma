datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Cv {
  token         String   @id
  userId        String?
  data          Json
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user           User?               @relation(fields: [userId], references: [id], onDelete: Cascade)
  meta           CvMeta?
  certificates   Certificate[]
  additionalText AdditionalText[]
}

model Certificate {
  id        String   @id @default(cuid())
  cvToken   String
  data      Json
  rawText   String
  createdAt DateTime @default(now())

  cv Cv @relation(fields: [cvToken], references: [token], onDelete: Cascade)
}

model AdditionalText {
  id        String   @id @default(cuid())
  cvToken   String
  content   String
  createdAt DateTime @default(now())

  cv Cv @relation(fields: [cvToken], references: [token], onDelete: Cascade)
}

model CvMeta {
  id        String   @id @default(cuid())
  cvToken   String   @unique

  name      String
  position  String
  summary   String

  imageUrl  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  cv Cv @relation(fields: [cvToken], references: [token], onDelete: Cascade)
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  name         String?
  publicSlug   String?   @unique
  passwordHash String
  createdAt    DateTime  @default(now())

  cvs      Cv[]
  sessions Session[]
}

model Session {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  createdAt DateTime @default(now())
  expiresAt DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
