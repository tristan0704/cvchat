datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Cv {
  token      String   @id
  data       Json
  createdAt DateTime @default(now())

  meta           CvMeta?
  references     ReferenceDocument[]
  certificates   Certificate[]
  additionalText AdditionalText[]
}

model ReferenceDocument {
  id        String   @id @default(cuid())
  cvToken   String
  rawText   String
  createdAt DateTime @default(now())

  cv Cv @relation(fields: [cvToken], references: [token], onDelete: Cascade)
}

model Certificate {
  id        String   @id @default(cuid())
  cvToken   String
  data      Json
  rawText   String
  createdAt DateTime @default(now())

  cv Cv @relation(fields: [cvToken], references: [token], onDelete: Cascade)
}

model AdditionalText {
  id        String   @id @default(cuid())
  cvToken   String
  content   String
  createdAt DateTime @default(now())

  cv Cv @relation(fields: [cvToken], references: [token], onDelete: Cascade)
}

model CvMeta {
  id        String   @id @default(cuid())
  cvToken   String   @unique

  name      String
  position  String
  summary   String

  imageUrl  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  cv Cv @relation(fields: [cvToken], references: [token], onDelete: Cascade)
}
